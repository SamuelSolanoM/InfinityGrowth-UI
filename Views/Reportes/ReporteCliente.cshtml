@{
    ViewData["Title"] = "Mi Reporte de Inversión";
}

<div class="container mx-auto px-4 py-8 shadow-xl rounded-lg">
    <h1 class="text-3xl font-bold text-[var(--text-primary)] mb-6">Mi Reporte de Inversión</h1>

    <!-- Dashboard Personal del Cliente -->
    <div class="bg-[var(--accent-color)] rounded-lg p-4 mb-8 shadow-md">
        <h3 class="text-3xl font-semibold text-[var(--text-primary)] mb-4">Resumen Financiero</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-4 text-sm text-[var(--text-primary)]">
            <div>
                <p class="font-medium">Total Invertido:</p>
                <p id="totalInvertido">$0</p>
            </div>
            <div>
                <p class="font-medium">Ganancia Acumulada:</p>
                <p id="gananciaAcumulada" class="text-[var(--positive-color)] font-semibold">$0</p>
            </div>
            <div>
                <p class="font-medium">Pérdida Acumulada:</p>
                <p id="perdidaAcumulada" class="text-[var(--negative-color)] font-semibold">$0</p>
            </div>
            <div>
                <p class="font-medium">Comisión Pagada:</p>
                <p id="comisionPagada">$0</p>
            </div>
            <div>
                <p class="font-medium">Acción Más Rentable:</p>
                <p id="accionMasRentable" class="text-[var(--positive-color)] font-semibold">-</p>
            </div>
            <div>
                <p class="font-medium">Mayor Pérdida:</p>
                <p id="accionConMayorPerdida" class="text-[var(--negative-color)] font-semibold">-</p>
            </div>
        </div>
    </div>

    <!-- Tabla de transacciones -->
    <div id="grid-table"></div>
</div>

